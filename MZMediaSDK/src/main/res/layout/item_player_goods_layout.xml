<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_player_goods_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:cardCornerRadius="@dimen/dimen_4">

    <android.support.v7.widget.CardView
        android:layout_width="185dp"
        android:layout_height="60dp"
        app:cardCornerRadius="@dimen/dimen_4">

        <android.support.constraint.ConstraintLayout
            android:layout_width="185dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/item_player_goods_avatar_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/item_player_goods_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:maxEms="6"
                android:layout_marginTop="@dimen/dimen_8"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14sp"
                app:layout_constraintLeft_toRightOf="@id/item_player_goods_avatar_iv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="一叶子面膜国…" />

            <TextView
                android:id="@+id/item_player_goods_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff4141"
                android:textSize="@dimen/dimen_14sp"
                app:layout_constraintLeft_toLeftOf="@id/item_player_goods_name_tv"
                app:layout_constraintTop_toBottomOf="@id/item_player_goods_name_tv"
                tools:text="79" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
