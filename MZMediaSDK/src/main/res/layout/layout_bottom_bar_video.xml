<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_bottom_bar_video_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_bar_height"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_video_bottom_bg"
        android:orientation="horizontal"
        android:paddingRight="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_video_bottom_bar_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/sel_btn_play" />

        <TextView
            android:id="@+id/tv_video_bottom_bar_cur_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/seek_video_bottom_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/layer_seek_progress"
            android:thumb="@drawable/shape_seek_ball" />

        <TextView
            android:id="@+id/tv_video_bottom_bar_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/layout_bottom_Contioner_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/iv_video_bottom_bar_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/sel_btn_fullscreen"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_video_bottom_bar_danmaku_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:padding="5dp"
            android:src="@drawable/sel_btn_danmaku_control"
            android:visibility="gone" />

        <TextView
            android:id="@+id/iv_video_bottom_bar_media_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/ic_media_quality_smooth"
            android:gravity="center"
            android:padding="5dp"
            android:text="自动"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:visibility="gone" />
    </LinearLayout>
</merge>