<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/layout_message_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_8"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/message_dialog_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/dimen_20"
                    android:paddingBottom="@dimen/dimen_6"
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/message_dialog_msg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:linksClickable="true"
                android:maxLines="10"
                android:paddingLeft="@dimen/dimen_14"
                android:paddingTop="@dimen/dimen_11"
                android:paddingRight="@dimen/dimen_14"
                android:text=""
                android:textColor="#666666"
                android:textSize="@dimen/dimen_14sp" />

            <LinearLayout
                android:id="@+id/view_dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp"
                android:visibility="gone"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_31"
                android:background="#dddddd"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/mz_dialog_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/message_dialog_btn_cancle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/dimen_11"
                    android:text="结束直播"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#dddddd"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/message_dialog_btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/dimen_11"
                    android:text="继续直播"
                    android:textColor="#00dc58"
                    android:textSize="@dimen/dimen_16sp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>